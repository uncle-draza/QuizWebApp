@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}



<div class="row" style="padding: 0px 20px 20px">
    <div class="col-md-4">
        <h1>Registracija</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">E-mail adresa</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Lozinka</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Ponovite lozinku</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registracija</button>
        </form>
        <div class="form-group">
            <p>&nbsp;</p>
            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Imate nalog? Prijavite se.</a>
            </p>
        </div>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
