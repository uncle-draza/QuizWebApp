@model QuizzWebApp.Models.Question

@{
    ViewData["Title"] = "Brisanje pitanja";
}

<!DOCTYPE html>
<html>
<head>
    <title>Brisanje pitanja</title>
</head>
<body style="padding:0px 20px 20px">
    <h1>Obriši pitanje</h1>
    <h3>Da li ste sigurni da želite da obrišete ovo pitanje?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Pitanje
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.quizzQuestion)
            </dd>
            <dt class="col-sm-2">
                Odgovor
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.quizzAnswer)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Obriši" class="btn btn-danger" />
        </form>
    </div>
    <p>&nbsp;</p>
    <div>
        <a asp-action="Index">Nazad na listu</a>
    </div>
</body>
</html>


