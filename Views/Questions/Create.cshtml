@model QuizzWebApp.Models.Question

@{
    ViewData["Title"] = "Dodavanje pitanja";
}

<!DOCTYPE html>
<html>
<head>
    <title>Dodavanje pitanja</title>
</head>
<body style="padding:0px 20px 20px">
    <h1>Dodavanje pitanja</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="quizzQuestion" class="control-label">Pitanje</label>
                    <input asp-for="quizzQuestion" class="form-control" />
                    <span asp-validation-for="quizzQuestion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="quizzAnswer" class="control-label">Odgovor</label>
                    <input asp-for="quizzAnswer" class="form-control" />
                    <span asp-validation-for="quizzAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Nazad na listu</a>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
